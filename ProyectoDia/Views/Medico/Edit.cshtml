@model ProyectoDia.DataAccess.Medico

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Editar un medico</h1>
<div class="row">
    <div class="col-12">
        <div class="card-body">
            <!-- llamo al metodo edit, envio oculto el id, campo oculto-->
            <form asp-action="Edit">
                <input type="hidden" value="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="matricula" class="control-label"></label>
                    <input asp-for="matricula" class="form-control" />
                    <span asp-validation-for="matricula" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fas fa-user"></i> Editar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--BOTON PARA VOLVER A INDEX-->
<div>
    <a class="btn btn-primary" asp-action="Index">Volver a lista</a>
</div>
