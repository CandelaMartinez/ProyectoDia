@model ProyectoDia.DataAccess.Medico


@{
    ViewData["Title"] = "Create Medico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Listado de Medicos</h1>
@*<hr />*@
<div class="row">
    <div class="col-12">
        @*<div class="card-border">
            <div class="card-header">
                <h3><strong>Crear medico</strong></h3>
            </div>
        </div>*@
        <div class="card-body">

            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el numero de TS del paciente" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" placeholder="Ingresa el nombre del paciente" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="matricula" class="control-label"></label>
                    <input asp-for="matricula" class="form-control" placeholder="Ingresa el apellido del paciente" />
                    <span asp-validation-for="matricula" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fas fa-user"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--BOTON PARA VOLVER A INDEX-->
<div>
    <a class="btn btn-primary" asp-action="Index">Volver a lista</a>
</div>