@model ProyectoDia.DataAccess.Medico


@{
    ViewData["Title"] = "Create Medico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3>Dar de alta a Médico</h3>
    <div class="row">
        <div class="col-12">

                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row align-items-start">
                        <div class="form-group col">
                            <label asp-for="Nombre" class="control-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del médico" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="Apellido" class="control-label">Apellido</label>
                            <input asp-for="Apellido" class="form-control" placeholder="Ingresa el apellido del medico" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="matricula" class="control-label">Matrícula</label>
                            <input asp-for="matricula" class="form-control" placeholder="Ingresa la matricula del medico" />
                            <span asp-validation-for="matricula" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <!--BOTON PARA VOLVER A INDEX-->
                        <div>
                            <a class="btn btn-primary" asp-action="Index">Volver a lista</a>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success"><i class="fas fa-user"></i> Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
    </div>
</div>
