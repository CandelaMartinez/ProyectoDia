@model ProyectoDia.DataAccess.Paciente

@{
    ViewData["Title"] = "Detalle paciente";
    List<SelectListItem> dropdownVisitasMedicas = (List<SelectListItem>)ViewBag.listaDropDownVM;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Información detallada del paciente</h3>

<div class="mb-3"  background-color:transparent">
    <p class="card-text">Tarjeta Sanitaria: <small class="text-muted">@Html.DisplayFor(m => m.TarjetaSanitaria)</small></p>
    <p class="card-text"> Nombre: <small class="text-muted"> @Html.DisplayFor(m => m.Nombre)</small></p>
    <p class="card-text"> Apellidos: <small class="text-muted"> @Html.DisplayFor(m => m.Apellido)</small></p>
    <p class="card-text"> Fecha de nacimiento: <small class="text-muted"> @Html.DisplayFor(m => m.FechaNacimiento)</small></p>
    <p class="card-text"> Telefono: <small class="text-muted"> @Html.DisplayFor(m => m.Telefono)</small></p>
    <p class="card-text"> Direccion: <small class="text-muted"> @Html.DisplayFor(m => m.Direccion)</small></p>
</div>

<!--BOTON PARA VOLVER A INDEX-->
<div>
    <a class="btn btn-primary" asp-action="Index">Volver a lista</a>
</div>

