@model IEnumerable<ProyectoDia.DataAccess.VisitaMedica>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">vm CRUD</h1>

<!--New Patient button-->
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <!--Font Awesome icon, create method in HomeController-->
            <a asp-action="Create" asp-controller="VisitaMedica" class="btn-success"><i class="fas fa-plus"></i> Add new vm</a>
        </div>
    </div>
</div>
<!-- List of patients-->
<div class="row">
    <div class="col-12">
        <div class="card-border">
            <div class="card-header">
                <h3><strong>vm List</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <!--model access, if there is any register-->
                @if (Model.Count() > 0)
                {
                    //create the table
                    <table class="table table-bordered" id="tblPacientes" width="100%" cellspacing="0">
                        <!--accesing the fields of the table-->
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Id)</th>
                                <th>@Html.DisplayNameFor(m => m.PacienteId)</th>
                                <th>@Html.DisplayNameFor(m => m.MedicoId)</th>
                                <th>@Html.DisplayNameFor(m => m.Observaciones)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <!--accesing the data of the registers-->
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Id)</td>
                                    <td>@Html.DisplayFor(m => item.PacienteId)</td>
                                    <td>@Html.DisplayFor(m => item.MedicoId)</td>
                                    <td>@Html.DisplayFor(m => item.Observaciones)</td>
                                    <td>
                                        <!--botones para las acciones sobre los registros -->
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i>Edit</a>
                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-info"></i>Details</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i>Delete</a>

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>
<!--js para llamar al datatable-->
@section Scripts{
    <script>
        $(document).ready(function () {
            //Llamar a datatable
            $('#tblPacientes').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}

