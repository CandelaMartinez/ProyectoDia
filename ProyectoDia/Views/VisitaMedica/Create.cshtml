@model ProyectoDia.DataAccess.VisitaMedica


@{
    ViewData["Title"] = "Create visita medica";
    List<SelectListItem> dropdownMedicos = (List<SelectListItem>)ViewBag.listadropdownMedicos;
    List<SelectListItem> dropdownPacientes = (List<SelectListItem>)ViewBag.listadropdownPacientes;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">Registrar visita medica</h1>

<div class="row">
    <div class="col-12">
     
        <div class="card-body">

            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PacienteId" class="control-label"></label>
                    <select asp-for="PacienteId" asp-items="dropdownPacientes" id="desplegableMedicosVM">
                        <option>Elige paciente</option>
                    </select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MedicoId" class="control-label"></label>
                    <select asp-for="MedicoId" asp-items="dropdownMedicos" id="desplegablePacientesVM">
                        <option>Elige medico</option>
                    </select>
                    <span asp-validation-for="MedicoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Observaciones" class="control-label"></label>
                    <input asp-for="Observaciones" class="form-control" placeholder="Ingresa el apellido del paciente" />
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fas fa-user"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--BOTON PARA VOLVER A INDEX-->
<div>
    <a asp-action="Index">Volver a lista</a>
</div>