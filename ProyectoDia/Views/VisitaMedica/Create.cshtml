@model ProyectoDia.DataAccess.VisitaMedica
@{
    ViewData["Title"] = "Create visita medica";
    List<SelectListItem> dropdownMedicos = (List<SelectListItem>)ViewBag.listadropdownMedicos;
    List<SelectListItem> dropdownPacientes = (List<SelectListItem>)ViewBag.listadropdownPacientes;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Registrar visita medica</h1>
    <div class="row">
        <div class="col-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row align-items-start">
                        <div class="form-group col">
                            <label asp-for="PacienteId" class="control-label">Nombre paciente</label>
                            <select asp-for="PacienteId" asp-items="dropdownPacientes" id="desplegableMedicosVM" class="form-control">
                                <option>Elige paciente</option>
                            </select>
                            <span asp-validation-for="PacienteId" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="MedicoId" class="control-label">Nombre médico</label>
                            <select asp-for="MedicoId" asp-items="dropdownMedicos" id="desplegablePacientesVM" class="form-control">
                                <option>Elige medico</option>
                            </select>
                            <span asp-validation-for="MedicoId" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="Fecha" class="control-label">Fecha</label>
                            <input asp-for="Fecha" class="form-control" placeholder="Ingresa la fecha de la consulta medica" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Observaciones" class="control-label">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" placeholder="Ingresa observaciones sobre al consulta" style="height: 100px"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <!--BOTON PARA VOLVER A INDEX-->
                        <div>
                            <a class="btn btn-primary" asp-action="Index">Volver a lista</a>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success"><i class="fas fa-user"></i> Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
    </div>
</div>