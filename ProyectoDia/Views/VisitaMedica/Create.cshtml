@model ProyectoDia.DataAccess.VisitaMedica


@{
    ViewData["Title"] = "Create visita medica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">vm CRUD</h1>
<hr />
<div class="row">
    <div class="col-12">
        <div class="card-border">
            <div class="card-header">
                <h3><strong>Create vm</strong></h3>
            </div>
        </div>
        <div class="card-body">

            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Paciente" class="control-label"></label>
                    <input asp-for="Paciente" class="form-control" placeholder="Ingresa el numero de TS del paciente" />
                    <span asp-validation-for="Paciente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medico" class="control-label"></label>
                    <input asp-for="Medico" class="form-control" placeholder="Ingresa el nombre del paciente" />
                    <span asp-validation-for="Medico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Observaciones" class="control-label"></label>
                    <input asp-for="Observaciones" class="form-control" placeholder="Ingresa el apellido del paciente" />
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fas fa-user"></i>Crear vm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--BOTON PARA VOLVER A INDEX-->
<div>
    <a asp-action="Index">Volver a lista</a>
</div>